@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3 class="mb-4">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm border-0 rounded-3">
            <div class="card-body p-4">
                <form id="profile-form" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <div class="row align-items-center">
                        <!-- صورة البروفايل -->
                        <div class="col-md-4 text-center mb-3">
                            <div class="position-relative d-inline-block">
                                <img src="@Model.Input.ProfilePicturePath" alt="Profile Picture"
                                     class="rounded-circle shadow-sm"
                                     style="width:140px; height:140px; object-fit:cover; border: 3px solid #dee2e6;" id="preview"/>
                            </div>
                            <div class="mt-3">
                                <label for="img" class="btn btn-outline-primary">
                                    <i class="fa fa-upload"></i> choose picture
                                </label>
                                <input asp-for="Input.ProfilePictureFile" type="file" id="img" class="d-none" />
                                <span asp-validation-for="Input.ProfilePictureFile" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- معلومات الحساب -->
                        <div class="col-md-8">
                            <div class="form-floating mb-3">
                                <input asp-for="Username" class="form-control" disabled />
                                <label asp-for="Username" class="form-label"></label>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number." />
                                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- زر الحفظ -->
                    <div class="mt-4 text-end">
                        <button type="submit" class="btn btn-primary px-4 py-2 shadow-sm">
                            <i class="bi bi-save me-1"></i> Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script>
    // عند اختيار ملف جديد
    $("#img").on("change", function () {
        var file = this.files[0];
        if (file) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $("#preview").attr("src", e.target.result); // تغيير src للصورة
            }
            reader.readAsDataURL(file);
        }
    });
</script>

<script>
    $(document).ready(function () {
        $("#profile-form").on("submit", function (e) {
            e.preventDefault(); // منع الفورم العادي

            var formData = new FormData(this); // يدعم رفع الملفات

            $.ajax({
                url: '@Url.Page("Index")', // نفس الصفحة
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    if (response.success) {
                        // تحديث صورة البروفايل مباشرة
                        if (response.profilePicture) {
                            $("img[alt='Profile Picture']").attr("src", response.profilePicture + "?t=" + new Date().getTime());
                        }
                        // تحديث رقم الهاتف
                        $("input[name='Input.PhoneNumber']").val(response.phoneNumber);

                        // رسالة نجاح
                        Swal.fire("success",response.message,"Success");
                    } else {
                        Swal.fire("error",response.message,"Error");
                    }
                },
                error: function (xhr) {
                        Swal.fire("error",xhr.responseText,"Error");
                }
            });
        });
    });
</script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
