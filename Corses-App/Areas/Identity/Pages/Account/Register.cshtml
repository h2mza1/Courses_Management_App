@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

@* j /////////////////////////////////////////////////////////////////*@
<div class="login-bg d-flex align-items-center justify-content-center vh-100">

    <!-- الكرت بالنص -->
    <div class="card shadow-lg rounded-4 border-0" style="max-width: 400px; width: 100%;">
        <h2 class="card-header text-center text-white bg-gradient"
            style="background: linear-gradient(135deg, #0d6efd, #0dcaf0);">
            Register
        </h2>

        <div class="card-body p-4">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                <!-- Full Name -->
                <div class="input-group mb-3">
                    <span class="input-group-text bg-light"><i class="bi bi-person-circle"></i></span>
                    <div class="form-floating flex-grow-1">
                        <input asp-for="Input.FullName" class="form-control" autocomplete="FullName" aria-required="true" placeholder="FullName" />
                        <label asp-for="Input.FullName">FullName</label>
                    </div>
                </div>
                <span asp-validation-for="Input.FullName" class="text-danger small"></span>


                <!-- Email -->
                <div class="input-group mb-3">
                    <span class="input-group-text bg-light"><i class="bi bi-envelope-fill"></i></span>
                    <div class="form-floating flex-grow-1">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                    </div>
                </div>
                <span asp-validation-for="Input.Email" class="text-danger small"></span>

                <!-- Password -->
                <div class="input-group mb-3">
                    <span class="input-group-text bg-light"><i class="bi bi-lock-fill"></i></span>
                    <div class="form-floating flex-grow-1">
                        <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password">Password</label>
                    </div>
                </div>
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
                <!-- Confirm Password -->
                <div class="input-group mb-3">
                    <span class="input-group-text bg-light"><i class="bi bi-lock-fill"></i></span>
                    <div class="form-floating flex-grow-1">
                        <input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="confirm password" />
                        <label asp-for="Input.ConfirmPassword">Password</label>
                    </div>
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>

                <!-- Submit -->
                <div class="d-grid">
                    <button id="registerSubmit" type="submit" class="btn btn-lg btn-primary shadow-sm">
                        <i class="bi bi-box-arrow-in-right me-2"></i> Register
                    </button>
                </div>
            </form>
        </div>

        <div class="card-footer text-center bg-light">
            
            <p class="m-1">
                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">Do you have an account ? Login Now</a>
            </p>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <!-- Bootstrap Icons -->

    <style>
        /* خلفية متدرجة فل سكرين */
        .login-bg {
            background: linear-gradient( 155deg, #ededed, #efefef)
        }
    </style>
}
